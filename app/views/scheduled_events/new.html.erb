<h1>Medications</h1>

<%= form_for(@scheduled_event) do |f| %>
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %><br>
	</div>

	<div class="field">
		<%= f.label :description %>
		<%= f.text_area :description %><br>
	</div>

	<div class="field">
		<%= f.label :dosage_in_milligrams %>
		<%= f.number_field :dosage_in_milligrams %><br>
	</div>

	<div class="field">
		<%= f.label :day_of_week %>
		<%= f.select :day_of_week, ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'] %>
	</div>

	<div class="field">
		<%= f.label :time_of_day %>
		<%= f.select :time_of_day, ['Breakfast', 'Lunch', 'Dinner', 'Bedtime'] %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>